page {
  background: #f5f5f5;
}
.message {
  width: 100%;
  margin-top: 80rpx;
}
.col1 {
  color: #ccc;
}
.message view:nth-child(1){
  font-size: 30rpx;
  color: #cccccc;
  margin-left: 10rpx;
  margin-bottom:12rpx;
}
.message view:nth-child(2) {
  width:98%;
  height:90rpx;
  margin-left: 1%;
  display: flex;
  flex-direction: row;
  flex-flow: row wrap;
  background: #ffffff;
}
.message>view input {
  width: 68%;
  margin-left: 2%;
  height:90rpx;
  line-height:90rpx;
}
.message>view span {
  width: 28%;
  margin-left: 2%;
  font-size: 28rpx;
  padding:0;
  border-radius:8rpx;
  line-height:90rpx;
  text-align:center;
}
.next {
  background-color:#53a24f;
  color:#ffffff;
  margin-top:40rpx;
  width:98%;
  height:90rpx;
  line-height:90rpx;
  font-size:40rpx;
  text-align:center;
  margin-left:1%;
  border-radius:8rpx;
}
.wxToast_content {
  top:60%;
}