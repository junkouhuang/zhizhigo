page {
  background-color: #F2F1F1;
}

.passwprd-list {
	height: 400rpx;
  padding:28rpx;
}

.oldpassword {
  display:flex;
  flex-direction:row;
  flex-flow:row;
  font-size: 32rpx;
  height:90rpx;
  width:100%;
  background: #fff;
  margin-bottom:28rpx;
}
.oldpassword text{
  width:30%;
  height:90rpx;
  line-height: 90rpx;
  text-align:center;
}
.oldpassword view{
  width:60%;
  min-height:90rpx;
  height:90rpx;
}
.oldpassword  .oPwd {
  width:10%;
}
.oldpassword  .oPwd image{
  width:50rpx;
  height:50rpx;
  margin-top:26rpx;
}
.oldpassword input{
  width:100%;
  min-height:90rpx;
  height:90rpx;
}

