}

.title_money_symbol {
  font-size: 32rpx;
}

 .pay .wx_pay,  .pay .offline_pay,  .pay .wallet_pay {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #ddd;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

 .pay .wx_pay .icon,  .pay .offline_pay .icon,
 .pay .wallet_pay .icon {
  width: 34rpx;
  height: 34rpx;
  border: 2rpx solid #ddd;
  box-sizing: border-box;
  border-radius: 50%;
  margin-left: 20rpx;
}

 .pay .wx_pay .icon.active,  .pay .offline_pay .icon.active,
 .pay .wallet_pay .icon.active {
  border: 10rpx solid #53a24f;
}

 .pay .wx_pay text,  .pay .offline_pay text,  .pay .wallet_pay text {
  margin-left: 20rpx;
  color: #353535;
  font-size: 32rpx;
}

 .pay .wallet_pay {
  border: 0;
  border-top: 2rpx solid #ddd;
}

 .pay .offline_pay {
  border: 0 none;
}

 .save {
  width: 100%;
