 .pay .title {
  height: 180rpx;
  padding: 0 23rpx;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
}

.title .title_txt {
  width:100%;
  height:40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
