page {
  height: 100%;
  width: 100%;
  background: #fff;
}

.pay {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.pay .title {
  height: 180rpx;
  padding: 0 23rpx;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
}

.title .title_txt {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 38rpx;
  text-align: center;
  margin-top: 40rpx;
}

.title_money {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 48rpx;
  color: #53a24f;
  font-weight: bold;
}


.pay .wx_pay, .pay .offline_pay, .pay .wallet_pay {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #ddd;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.pay .wx_pay .icon, .pay .offline_pay .icon, .pay .wallet_pay .icon {
  width: 34rpx;
  height: 34rpx;
  border: 2rpx solid #ddd;
  box-sizing: border-box;
  border-radius: 50%;
  margin-left: 20rpx;
}

.pay .wx_pay .icon.active, .pay .offline_pay .icon.active,
.pay .wallet_pay .icon.active {
  border: 10rpx solid #53a24f;
}

.pay .wx_pay text, .pay .offline_pay text, .pay .wallet_pay text {
  margin-left: 22rpx;
  color: #353535;
  font-size: 34rpx;
}

.pay .wallet_pay {
  border: 0;
  border-top: 2rpx solid #ddd;
}

.pay .offline_pay {
  border: 0 none;
}

.save {
  color: #fff;
  background: #53a24f;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 36rpx;
  /**position:fixed;**/
  bottom: 0;
  left: 0;
  right: 0;
}

.save button {
  color: #fff;
  background: #53a24f;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  /**position:fixed;**/
  bottom: 0;
  left: 0;
  right: 0;
}

.save image {
  width:30rpx;
  height: 30rpx;
  position: relative;
  top: 4rpx;
}

.wallets-password {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.wallets-password .input-content-wrap {
  position: absolute;
  top: 200rpx;
  left: 50%;
  display: flex;
  flex-direction: column;
  width: 600rpx;
  margin-left: -300rpx;
  background: #fff;
  border-radius: 20rpx;
  z-index: 0;
}

.wallets-password .input-content-wrap .top {
  display: flex;
  align-items: center;
  height: 90rpx;
  border-bottom: 2rpx solid #ddd;
  justify-content: space-around;
}

.wallets-password .input-content-wrap .top .close {
  font-size: 44rpx;
  color: #999;
  font-weight: 100;
}

.wallets-password .input-content-wrap .top .forget {
  color: #53a24f;
  font-size: 22rpx;
}

.wallets-password .input-content-wrap .actual_fee {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  height: 100rpx;
  margin: 0 23rpx;
  border-bottom: 2rpx solid #ddd;
  font-weight: bold;
}

.wallets-password .input-content-wrap .actual_fee span {
  /**font-size: 24rpx;**/
}

.wallets-password .input-content-wrap .actual_fee text {
  font-size: 36rpx;
}

.wallets-password .input-content-wrap .input-password-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 150rpx;
}

.wallets-password .input-content-wrap .input-password-wrap .password_dot {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #000;
  box-sizing: border-box;
  width: 90rpx;
  height: 90rpx;
  border: 2rpx solid #ddd;
  border-left: none 0;
}

.wallets-password .input-content-wrap .input-password-wrap .password_dot:nth-child(1) {
  border-left: 2rpx solid #ddd;
}

.wallets-password .input-content-wrap .input-password-wrap .password_dot i {
  background: #000;
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
}

.wallets-password .input-content {
  position: absolute;
  opacity: 0;
  left: -100%;
  top: 600rpx;
  background: #f56;
  z-index: -999;
}

.wallets-password .input-content.active {
  z-index: -99;
}

